<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/curve_design_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/ic_cross_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Notely"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/setting_dummy" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Harsh Raj Kushwaha"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/segoe_ui_semibold"
            android:text="kushwaharsh0002@gmail.com"
            android:textColor="@color/greyText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/buyPremiumTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_buy_premium"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Buy Premium"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/editProfileTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_edit_profile"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appThemeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_app_theme"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notificationsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_notifications"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Notifications"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/securityTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_security"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Security"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logoutTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_logout"
            android:drawableRight="@drawable/ic_arrow_left"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_vertical"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/curve_design_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/segoe_ui"
            android:text="follow us on"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/linkedinBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_linkedin" />

            <ImageView
                android:id="@+id/githubBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_github" />

            <ImageView
                android:id="@+id/twitterBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_twitter" />

            <ImageView
                android:id="@+id/instaBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_instagram" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>